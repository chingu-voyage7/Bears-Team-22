{
	"name": "knowledge-client",
	"version": "0.0.0",
	"private": true,
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"dev": "next dev",
		"start": "next start",
		"build": "next build",
		"heroku:start": "next start --port $PORT",
		"docker:build": "docker build -t knowledge-client .",
		"docker:run": "docker run -d --name knowledge-client -p 3000:3000 knowledge-client",
		"test": "xo"
	},
	"dependencies": {
		"@zeit/next-css": "^1.0.1",
		"antd": "^3.12.3",
		"delay": "^4.1.0",
		"express": "^4.16.4",
		"firebase": "~5.7.1",
		"is": "^3.3.0",
		"is-email-like": "^1.0.0",
		"moment": "^2.23.0",
		"next": "^7.0.2",
		"prop-types": "^15.6.2",
		"react": "^16.7.0",
		"react-dom": "^16.7.0"
	},
	"devDependencies": {
		"babel-eslint": "^10.0.1",
		"eslint": "5.12.1",
		"eslint-config-xo-react": "^0.18.0",
		"eslint-plugin-react": "^7.12.4",
		"xo": "^0.24.0"
	},
	"xo": {
		"parser": "babel-eslint",
		"extends": "xo-react",
		"envs": [
			"node",
			"browser"
		],
		"overrides": [
			{
				"files": "pages/*.test.js",
				"envs": [
					"node",
					"browser",
					"jest"
				]
			}
		],
		"rules": {
			"quotes": [
				"error",
				"double"
			],
			"react/prop-types": [
				"error",
				{
					"ignore": [
						"children"
					]
				}
			],
			"unicorn/filename-case": "warning",
			"import/no-unassigned-import": "warning"
		}
	}
}
