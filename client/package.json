{
	"name": "knowledge",
	"version": "0.0.0",
	"private": true,
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"dev": "next",
		"start": "next start",
		"build": "next build",
		"lint": "xo",
		"test": "npm run lint"
	},
	"dependencies": {
		"@zeit/next-css": "^1.0.1",
		"antd": "^3.11.0",
		"express": "^4.16.4",
		"firebase": "^5.7.1",
		"firebase-admin": "^6.4.0",
		"isomorphic-unfetch": "^3.0.0",
		"js-cookie": "^2.2.0",
		"next": "^7.0.2",
		"prop-types": "^15.6.2",
		"react": "^16.6.3",
		"react-dom": "^16.6.3"
	},
	"devDependencies": {
		"babel-eslint": "^10.0.1",
		"eslint": "5.6.0",
		"eslint-config-xo-react": "^0.17.0",
		"eslint-plugin-react": "^7.11.1",
		"xo": "^0.23.0"
	},
	"xo": {
		"parser": "babel-eslint",
		"extends": "xo-react",
		"envs": [
			"node",
			"browser"
		],
		"overrides": [
			{
				"files": "pages/*.test.js",
				"envs": [
					"node",
					"browser",
					"jest"
				]
			}
		],
		"rules": {
			"quotes": [
				"error",
				"double"
			],
			"react/prop-types": [
				"error",
				{
					"ignore": [
						"children",
						"form"
					]
				}
			],
			"unicorn/filename-case": "warning",
			"import/no-unassigned-import": "off"
		}
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	]
}
