{
	"name": "knowledge-server",
	"version": "0.0.0",
	"private": true,
	"main": "index.js",
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"start": "node index.js",
		"dev": "nodemon index.js",
		"lint": "xo",
		"test": "npm run lint"
	},
	"dependencies": {
		"cookie-parser": "^1.4.3",
		"cors": "^2.8.5",
		"dotenv": "^6.2.0",
		"express": "^4.16.4",
		"firebase-admin": "^6.5.0",
		"joi": "^14.3.1",
		"mongoose": "^5.4.5"
	},
	"devDependencies": {
		"nodemon": "^1.18.9",
		"xo": "^0.24.0"
	},
	"xo": {
		"rules": {
			"quotes": [
				"error",
				"double"
			],
			"camelcase": [
				"error",
				{
					"properties": "never"
				}
			]
		}
	}
}
