		"chai": "^4.2.0",
		"chai-http": "^4.2.0",
		"mocha": "^5.2.0",
		"nodemon": "^1.18.7",
		"xo": "^0.23.0"
	},
	"xo": {
		"rules": {
			"quotes": [
				"error",
				"double"
			]
		}
	}
